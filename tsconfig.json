{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node"],

    "noEmit": true,

    // Recommended Options
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@orkestrel/validator": ["./src/index.ts"]
    }
  }
}