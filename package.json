{
  "name": "@orkestrel/validator",
  "version": "0.1.0",
  "description": "Tiny, composable runtime type guards and assertions for TypeScript with LLM-friendly diagnostics",
  "type": "module",
  "license": "MIT",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
