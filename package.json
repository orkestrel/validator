{
  "name": "@orkestrel/validator",
  "version": "2.1.0",
  "description": "Focused, composable runtime type guards for TypeScript (ESM-only)",
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/orkestrel/validator.git"
  },
  "homepage": "https://github.com/orkestrel/validator#readme",
  "bugs": {
    "url": "https://github.com/orkestrel/validator/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync(process.argv[1],{recursive:true,force:true})}catch(e){}\"",
    "build": "npm run clean dist && vite build && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "check": "tsc -p tsconfig.build.json --noEmit",
    "format": "eslint . --fix",
    "prepublishOnly": "npm run check && npm run format && npm run test && npm run build"
  },
  "devDependencies": {
    "@orkestrel/docs": "^0.1.0",
    "@orkestrel/llms-txt": "^1.1.0",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  }
}
