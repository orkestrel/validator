{
  "name": "@orkestrel/validator",
  "version": "1.1.0",
  "description": "Tiny, composable runtime type guards and assertions for TypeScript with LLM-friendly diagnostics",
  "type": "module",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/orkestrel/validator.git"
  },
  "homepage": "https://github.com/orkestrel/validator#readme",
  "bugs": {
    "url": "https://github.com/orkestrel/validator/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "node -e \"try{require('fs').rmSync(process.argv[1],{recursive:true,force:true})}catch(e){}\"",
    "build": "npm run clean dist && vite build && tsc -p tsconfig.build.json",
    "test": "vitest run",
    "check": "tsc -p tsconfig.json",
    "format": "eslint . --fix",
    "prepublishOnly": "npm run check && npm run format && npm run test && npm run build"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.9.0",
    "@types/node": "^24.7.2",
    "eslint": "^9.37.0",
    "eslint-plugin-jsdoc": "^61.1.4",
    "eslint-plugin-tsdoc": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  }
}
